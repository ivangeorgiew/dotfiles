# Font for window titles. Will also be used by the bar unless a different font is used in the bar {} block below.
font pango:Cousine for Powerline 13

for_window [class="^.*"] border pixel 3
gaps inner 5
gaps outer 5
workspace_layout default #default|stacking|tabbed
popup_during_fullscreen smart #smart|ignore|leave_fullscreen
focus_follows_mouse no

#window title and edge bar
#class                  border  backgr  text    indicator child_border
client.focused          #83a598 #458588 #ffffff #2e9ef4   #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.urgent           #fe8019 #fb4834 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

exec --no-startup-id i3lock-fancy && sleep 1
exec termite
exec feh --bg-scale ~/Downloads/wallpaper.jpg
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec --no-startup-id dunst
exec_always --no-startup-id xautolock -time 5 -locker "i3lock-fancy" #requires xautolock and i3lock-fancy

set $mod Mod1
set $left h
set $down j
set $up k
set $right l

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec termite
bindsym $mod+g exec google-chrome-stable
bindsym $mod+space exec --no-startup-id rofi -show run

# Audio shortcuts
bindsym $mod+F10 exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound
bindsym $mod+F11 exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
bindsym $mod+F12 exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# change split orientation
bindsym $mod+semicolon split toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

#system exit/sleep modes, from arch-wiki
set $Locker i3lock-fancy
set $mode_system System (l) lock, (e) exit, (s) suspend, (r) reboot, (p) poweroff
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+e mode "default"
}
bindsym $mod+Shift+e  mode "$mode_system"

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "term"
set $ws2 "chrome"
set $ws3 "mult"
set $ws4 "email"
set $ws5 "virtual"
set $ws6 "etc"

# switch to workspace
bindsym Ctrl+8 workspace $ws1
bindsym Ctrl+9 workspace $ws2
bindsym Ctrl+0 workspace $ws3
bindsym Ctrl+minus workspace $ws4
bindsym Ctrl+equal workspace $ws5
bindsym Ctrl+7 workspace $ws6

# move focused container to workspace
bindsym Ctrl+Shift+8 move container to workspace $ws1
bindsym Ctrl+Shift+9 move container to workspace $ws2
bindsym Ctrl+Shift+0 move container to workspace $ws3
bindsym Ctrl+Shift+minus move container to workspace $ws4
bindsym Ctrl+Shift+equal move container to workspace $ws5
bindsym Ctrl+Shift+7 move container to workspace $ws6

#assign windows to different workspaces
assign [class="Termite"] $ws1
assign [class="Google-chrome"] $ws2
for_window [class="Spotify"] move to workspace $ws3
assign [class="Skype"] $ws3
assign [class="vlc"] $ws3
assign [class="Thunderbird"] $ws4
